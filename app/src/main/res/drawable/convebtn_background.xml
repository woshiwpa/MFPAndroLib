<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true">	<!-- pressed -->
		<shape android:shape="rectangle">
			<gradient android:startColor="#FFFFAA00" 
				android:endColor="#FF00FF00"
				android:angle="270" />
			<corners android:radius="4dp" />
			<stroke android:width="1px" android:color="#FF000000" />
			<padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
		</shape>
	</item>

     <item>	<!-- default -->
		<shape android:shape="rectangle">
			<gradient android:startColor="#FFA3A3A3" 
				android:endColor="#FF5F5F5F"
				android:angle="270" />
			<corners android:radius="4dp" />
			<stroke android:width="1px" android:color="#FF000000" />
			<padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
		</shape>
	 </item>
 </selector>